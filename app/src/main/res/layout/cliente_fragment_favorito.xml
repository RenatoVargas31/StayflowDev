                            android:layout_marginEnd="8dp"
                            android:src="@drawable/ic_restaurant"
                             />

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_garage"
                             />
                    </LinearLayout>

