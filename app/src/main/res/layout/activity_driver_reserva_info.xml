<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.Activity.DriverReservaInfoActivity">
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/md_theme_primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Detalles de recojo"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- Aquí agregarás el contenido de tu actividad -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FAFAFA"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

            <!-- Card: Información del pasajero -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/pasajeroCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Título principal -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/pasajeroTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Pasajero"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Foto de perfil -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_foto_perfil"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/user_icon"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pasajeroTitulo"
                        app:strokeColor="?attr/colorPrimary"
                        app:strokeWidth="2dp"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <!-- Nombre del pasajero -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/pasajeroIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_person"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pasajeroTitulo"
                        app:tint="?attr/colorPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nombrePasajero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="Juan Carlos Méndez"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/iv_foto_perfil"
                        app:layout_constraintStart_toEndOf="@id/pasajeroIcon"
                        app:layout_constraintTop_toTopOf="@id/pasajeroIcon"
                        app:layout_constraintBottom_toBottomOf="@id/pasajeroIcon" />

                    <!-- Teléfono del pasajero -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/telefonoIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_phone"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pasajeroIcon"
                        app:tint="?attr/colorPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/telefonoPasajero"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:text="+51 987 654 321"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:autoLink="phone"
                        app:layout_constraintStart_toEndOf="@id/telefonoIcon"
                        app:layout_constraintTop_toTopOf="@id/telefonoIcon"
                        app:layout_constraintBottom_toBottomOf="@id/telefonoIcon" />

                    <!-- Divisor -->
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/telefonoIcon" />

                    <!-- Número de pasajeros -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/pasajerosIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="16dp"
                        android:src="@drawable/ic_group_fill"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        app:tint="?attr/colorPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/numeroPasajeros"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="3 pasajeros"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/pasajerosIcon"
                        app:layout_constraintTop_toTopOf="@id/pasajerosIcon"
                        app:layout_constraintBottom_toBottomOf="@id/pasajerosIcon" />

                    <!-- Tipo de vehículo -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/vehiculoIcon"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_carro"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/pasajerosIcon"
                        app:tint="?attr/colorPrimary" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tipoVehiculo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="Sedán estándar"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/vehiculoIcon"
                        app:layout_constraintTop_toTopOf="@id/vehiculoIcon"
                        app:layout_constraintBottom_toBottomOf="@id/vehiculoIcon" />

                    <!-- Segundo divisor -->
                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/vehiculoIcon" />

                    <!-- Sección de notas -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:background="?attr/colorSurfaceVariant"
                        app:layout_constraintTop_toBottomOf="@id/divider2">

                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/notasIcon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/ic_notification"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="?attr/colorPrimary" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/notasTitulo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Nota del Pasajero"
                            android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                            android:textColor="?attr/colorOnSurface"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toEndOf="@id/notasIcon"
                            app:layout_constraintTop_toTopOf="@id/notasIcon"
                            app:layout_constraintBottom_toBottomOf="@id/notasIcon" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/notasContenido"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="Llevo dos maletas grandes. Por favor ayuda con equipaje. Soy sordo, prefiero comunicación por mensajes."
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:lineSpacingExtra="2dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/notasTitulo" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Detalles del viaje -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/viajeCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <!-- Título principal -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/viajeTitulo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Información del Viaje"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="?attr/colorOnSurface"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- ORIGEN -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/origenDot"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="20dp"
                        android:src="@drawable/ic_location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/viajeTitulo"
                        app:tint="#1976D2" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/origenLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Origen"
                        android:textSize="13sp"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="#1976D2"
                        app:layout_constraintStart_toEndOf="@id/origenDot"
                        app:layout_constraintTop_toTopOf="@id/origenDot"
                        app:layout_constraintBottom_toBottomOf="@id/origenDot" />

                    <!-- Icono del hotel para el origen -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_hotel_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_hotel"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/origenDot"
                        app:layout_constraintBottom_toBottomOf="@id/origenDot"
                        app:tint="?attr/colorPrimary" />

                    <!-- Nombre del lugar de origen -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nombreOrigen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:text="Hotel Altura Real"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toStartOf="@id/iv_hotel_icon"
                        app:layout_constraintStart_toStartOf="@id/origenLabel"
                        app:layout_constraintTop_toBottomOf="@id/origenLabel" />

                    <!-- Dirección del origen -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/direccionOrigen"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Av. Javier Prado Este 1234, San Isidro"
                        android:textSize="13sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/origenLabel"
                        app:layout_constraintTop_toBottomOf="@id/nombreOrigen" />

                    <!-- Línea vertical conectora -->
                    <View
                        android:id="@+id/lineaConectora"
                        android:layout_width="2dp"
                        android:layout_height="24dp"
                        android:background="?attr/colorOutlineVariant"
                        android:layout_marginTop="8dp"
                        app:layout_constraintEnd_toEndOf="@id/origenDot"
                        app:layout_constraintStart_toStartOf="@id/origenDot"
                        app:layout_constraintTop_toBottomOf="@id/direccionOrigen" />

                    <!-- DESTINO -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/destinoDot"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/ic_location"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/lineaConectora"
                        app:tint="#2E7D32" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/destinoLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="Destino"
                        android:textSize="13sp"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="#2E7D32"
                        app:layout_constraintStart_toEndOf="@id/destinoDot"
                        app:layout_constraintTop_toTopOf="@id/destinoDot"
                        app:layout_constraintBottom_toBottomOf="@id/destinoDot" />

                    <!-- Icono del aeropuerto para el destino -->
                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/iv_aeropuerto_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginEnd="8dp"
                        android:src="@drawable/ic_aeropuerto"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/destinoDot"
                        app:layout_constraintBottom_toBottomOf="@id/destinoDot"
                        app:tint="?attr/colorPrimary" />

                    <!-- Nombre del lugar de destino -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/nombreDestino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:layout_marginEnd="8dp"
                        android:text="Aeropuerto Internacional"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:maxLines="1"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toStartOf="@id/iv_aeropuerto_icon"
                        app:layout_constraintStart_toStartOf="@id/destinoLabel"
                        app:layout_constraintTop_toBottomOf="@id/destinoLabel" />

                    <!-- Dirección del destino -->
                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/direccionDestino"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="2dp"
                        android:text="Jorge Chávez International Airport, Callao"
                        android:textSize="13sp"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:maxLines="2"
                        android:ellipsize="end"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/destinoLabel"
                        app:layout_constraintTop_toBottomOf="@id/nombreDestino" />

                    <!-- Información de fecha y hora -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/fechaHoraCard"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        style="@style/Widget.Material3.CardView.Filled"
                        app:layout_constraintTop_toBottomOf="@id/direccionDestino"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp"
                            android:gravity="center_vertical">

                            <!-- Icono de calendario -->
                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_calendar"
                                app:tint="?attr/colorPrimary" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fecha y hora programada"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/fechaHora"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="2dp"
                                    android:text="23 de Abril 2025 - 10:30 AM"
                                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                                    android:textStyle="bold"
                                    android:textColor="?attr/colorOnSurface" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Detalles adicionales del viaje -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/detallesViaje"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:cardCornerRadius="12dp"
                        app:cardElevation="0dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="?attr/colorOutlineVariant"
                        style="@style/Widget.Material3.CardView.Filled"
                        app:layout_constraintTop_toBottomOf="@id/fechaHoraCard"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="16dp">

                            <!-- Distancia estimada -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Distancia"
                                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/distanciaViaje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="25.8 km"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="?attr/colorOnSurface" />
                            </LinearLayout>

                            <!-- Separador vertical -->
                            <View
                                android:layout_width="1dp"
                                android:layout_height="match_parent"
                                android:layout_marginHorizontal="16dp"
                                android:background="?attr/colorOutlineVariant" />

                            <!-- Tiempo estimado -->
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="vertical">

                                <com.google.android.material.textview.MaterialTextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Tiempo est."
                                    android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                    android:textColor="?attr/colorOnSurfaceVariant" />

                                <com.google.android.material.textview.MaterialTextView
                                    android:id="@+id/tiempoViaje"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="4dp"
                                    android:text="45 min"
                                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                                    android:textColor="?attr/colorOnSurface" />
                            </LinearLayout>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Card: Ubicación del hotel -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/hotelCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="0dp"
                app:strokeWidth="1dp"
                app:strokeColor="?attr/colorOutline"
                style="@style/Widget.Material3.CardView.Outlined">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Google Maps integrado -->
                    <com.google.android.gms.maps.MapView
                        android:id="@+id/map_hotel"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent" />

                    <!-- Badge de hotel superpuesto -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_hotel_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="?attr/colorPrimary"
                        app:layout_constraintTop_toTopOf="@id/map_hotel"
                        app:layout_constraintStart_toStartOf="@id/map_hotel">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_hotel"
                                app:tint="?attr/colorOnPrimary" />

                            <com.google.android.material.textview.MaterialTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:text="Hotel"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnPrimary"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Rating badge en la esquina superior derecha -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/cv_rating_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        app:cardCornerRadius="16dp"
                        app:cardElevation="4dp"
                        app:cardBackgroundColor="?attr/colorSurfaceVariant"
                        app:layout_constraintTop_toTopOf="@id/map_hotel"
                        app:layout_constraintEnd_toEndOf="@id/map_hotel">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="8dp"
                            android:gravity="center_vertical">

                            <com.google.android.material.imageview.ShapeableImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_star"
                                app:tint="#FFD700" />

                            <com.google.android.material.textview.MaterialTextView
                                android:id="@+id/tv_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="4dp"
                                android:text="4.8"
                                android:textAppearance="@style/TextAppearance.Material3.LabelMedium"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Botón para abrir en Google Maps (superpuesto en la esquina inferior derecha del mapa) -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_open_maps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"
                        android:src="@drawable/ic_mapa"
                        app:tint="@color/white"
                        app:backgroundTint="?attr/colorPrimary"
                        app:fabSize="mini"
                        app:layout_constraintBottom_toBottomOf="@id/map_hotel"
                        app:layout_constraintEnd_toEndOf="@id/map_hotel"
                        android:contentDescription="Abrir en Google Maps" />

                    <!-- Contenedor para la información del hotel -->
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_hotel_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        app:layout_constraintTop_toBottomOf="@id/map_hotel"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent">

                        <!-- Nombre del hotel -->
                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_hotel_nombre"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Hotel Brisa Dorada"
                            android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                            android:textColor="?attr/colorOnSurface"
                            android:maxLines="2"
                            android:ellipsize="end"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" />

                        <!-- Dirección con icono -->
                        <com.google.android.material.imageview.ShapeableImageView
                            android:id="@+id/iv_direccion_icon"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="16dp"
                            android:src="@drawable/ic_location"
                            app:tint="?attr/colorPrimary"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_hotel_nombre" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tv_hotel_direccion"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="12dp"
                            android:text="Avenida del Sol 1457, Distrito Playa Serena, Lima 18, Perú"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:lineSpacingExtra="2dp"
                            android:maxLines="3"
                            android:ellipsize="end"
                            app:layout_constraintStart_toEndOf="@id/iv_direccion_icon"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="@id/iv_direccion_icon" />

                        <!-- Información adicional -->
                        <LinearLayout
                            android:id="@+id/ll_info_adicional"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toBottomOf="@id/tv_hotel_direccion"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                        </LinearLayout>

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>