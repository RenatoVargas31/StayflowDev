<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Driver.Activity.DriverVehiculoActivity">

    <!-- Barra superior -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/md_theme_primary"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del vehículo"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- ScrollView para contenido desplazable -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Sección: Vehículo Actual -->
            <TextView
                android:id="@+id/tv_current_vehicle_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vehículo actual"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <!-- Tarjeta del vehículo actual -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_current_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Imagen del vehículo con etiqueta de seleccionado -->
                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="180dp">

                        <ImageView
                            android:id="@+id/iv_vehicle_photo"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:contentDescription="Foto del vehículo"
                            android:scaleType="centerCrop"
                            android:src="@drawable/pexels_alexgtacar_745150_1592384" />

                        <com.google.android.material.chip.Chip
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seleccionado"
                            app:chipBackgroundColor="@color/md_theme_tertiaryFixedDim"
                            app:chipIcon="@drawable/ic_estado"
                            android:textColor="@color/md_theme_tertiaryFixed_highContrast"
                            android:layout_gravity="end|top"
                            android:layout_margin="8dp"/>
                    </FrameLayout>

                    <!-- Detalles del vehículo -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Detalles del vehículo en forma de lista -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <!-- Placa -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Placa:"
                                    android:textSize="14sp"
                                    android:textColor="#757575"/>

                                <TextView
                                    android:id="@+id/tv_vehicle_plate"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="ABC-123"
                                    android:textSize="14sp"
                                    android:textStyle="bold"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                            <!-- Marca -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Marca:"
                                    android:textSize="14sp"
                                    android:textColor="#757575"/>

                                <TextView
                                    android:id="@+id/tv_vehicle_brand"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Toyota"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                            <!-- Modelo -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Modelo:"
                                    android:textSize="14sp"
                                    android:textColor="#757575"/>

                                <TextView
                                    android:id="@+id/tv_vehicle_model"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Corolla"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                            <!-- Color -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Color:"
                                    android:textSize="14sp"
                                    android:textColor="#757575"/>

                                <TextView
                                    android:id="@+id/tv_vehicle_color"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Blanco"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>

                            <!-- Año -->
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:layout_marginBottom="12dp">

                                <TextView
                                    android:layout_width="90dp"
                                    android:layout_height="wrap_content"
                                    android:text="Año:"
                                    android:textSize="14sp"
                                    android:textColor="#757575"/>

                                <TextView
                                    android:id="@+id/tv_vehicle_year"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="2020"
                                    android:textSize="14sp"
                                    android:textColor="@android:color/black"/>
                            </LinearLayout>
                        </LinearLayout>

                        <!-- Botones de acción -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="16dp"
                            android:weightSum="2">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_edit_vehicle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Editar"
                                android:textSize="14sp"
                                app:icon="@drawable/ic_edit"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_delete_vehicle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Eliminar"
                                android:textSize="14sp"
                                app:icon="@drawable/ic_delete"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Sección: Otros Vehículos -->
            <TextView
                android:id="@+id/tv_other_vehicles_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Otros vehículos registrados"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginBottom="8dp"/>

            <!-- RecyclerView para otros vehículos -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_other_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                tools:listitem="@layout/item_driver_vehicle"
                tools:itemCount="2" />

            <!-- Mensaje cuando no hay otros vehículos -->
            <TextView
                android:id="@+id/tv_no_other_vehicles"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tienes otros vehículos registrados"
                android:textSize="14sp"
                android:textColor="#757575"
                android:textAlignment="center"
                android:padding="24dp"
                android:visibility="gone"
                android:layout_marginBottom="16dp"/>

            <!-- Botón para añadir un nuevo vehículo -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_new_vehicle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir nuevo vehículo"
                android:textSize="14sp"
                app:cornerRadius="24dp"
                app:icon="@drawable/ic_add"
                app:iconGravity="textStart"
                style="@style/Widget.Material3.Button.OutlinedButton"/>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>