<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:strokeWidth="1dp"
    app:strokeColor="?attr/colorOutlineVariant"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <!-- Imagen del huésped -->
        <ImageView
            android:id="@+id/imgGuest"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_guest_placeholder"
            android:padding="4dp" />

        <!-- Contenido textual -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvNombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ana Bonino"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvCodigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Código de reserva: AFR456"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvEstadoTaxi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Taxi: Asignado"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textColor="?attr/colorOnSurface" />

            <TextView
                android:id="@+id/tvInfoViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Información del viaje"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorPrimary"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvDetalleViaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llegada: 23-06-25 02:30 pm"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="?attr/colorOnSurfaceVariant" />

            <TextView
                android:id="@+id/tvRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta: Aeropuerto → Hotel"
                android:textAppearance="?attr/textAppearanceLabelSmall"
                android:textColor="?attr/colorOnSurface" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
